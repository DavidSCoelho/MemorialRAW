<h1>Editar dados do cliente</h1>
    <hr>
    <form action="/detalheIndividualCliente/updateprod" method="POST">
        <div class="form-group">
            <input type="hidden" name="id" id="id" value="{{prod.id}}">
            <label for="nomecliente">Nome:</label>
            <input type="text" name="nomecliente" id="nomecliente" placeholder="Digite o nome do produto" value="{{prod.nome}}" class="form-control">
        </div>

            <div class="form-group">
            <label for="cpfcliente">CPF:</label>
            <input type="text" name="cpfcliente" placeholder="Digite seu cpf" value="{{prod.cpf}}" class="form-control">
        </div>

    <div class="form-group">
            <label for="idadecliente">Idade:</label>
            <input type="number" name="idadecliente" placeholder="Digite sua idade" value="{{prod.idade}}" class="form-control">
        </div>

            <div class="form-group">
            <label for="telefonecliente">telefone:</label>
            <input type="text" name="telefonecliente" placeholder="Digite seu telefone" value="{{prod.telefone}}" class="form-control">
        </div>
        <input type="submit" value="Editar" class="btn btn-outline-success btn-lg">
    </form>
